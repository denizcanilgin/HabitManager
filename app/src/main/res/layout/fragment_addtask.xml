<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d3c3c"
    tools:context=".fragments.AddTask"
    tools:ignore="MissingDefaultResource">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:padding="25dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:src="@drawable/pen_icon"
            android:background="@drawable/circle"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/et_taskname"
            android:drawablePadding="5dp"
            android:hint="Habit Name..."
            android:drawableLeft="@drawable/aim_icon"
            android:padding="10dp"
            android:outlineSpotShadowColor="#fff"
            android:cursorVisible="true"
            android:textColorHint="#918f8f"
            android:fontFamily="@font/cd_bold"
            android:background="#f2f2f2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_taskdesc"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"

            android:hint="Description..."
            android:drawableLeft="@drawable/pen_icon"
            android:padding="10dp"
            android:fontFamily="@font/cd_bold"
            android:outlineSpotShadowColor="#fff"
            android:cursorVisible="true"
            android:textColorHint="#918f8f"
            android:background="#f2f2f2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_createtask"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/cd_bold"
            android:text="Create a Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</FrameLayout>